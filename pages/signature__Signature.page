                    function handleResult(result,event) {
                        
                        if(result.success) {
                            try{
                                console.log('backtoparent try '+backtoparent);
                                if(backtoparent!='' && backtoparent!=null && (backtoparent=='1' || backtoparent==1) && parentRecordId!='noid'){
